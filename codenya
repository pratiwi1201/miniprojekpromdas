#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int bomb, tebakan;
    int min = 1, max = 100;
    int selesai = 0;

    srand(time(NULL));
    bomb = rand() % 100 + 1; 

    printf("\n");
    printf("+---------- GAME TEBAK ANGKA BOMB !!! ----------+\n");
    printf("|                                               |\n");
    printf("|       Pilih angka antara 1 sampai 100.        |\n");
    printf("|                                               |\n");
    printf("|   Jangan sampai pilih angka bomb! yaa....     |\n");
    printf("+-----------------------------------------------+\n\n\n");

    while (!selesai) {
        printf("Pilih angka antara %d sampai %d :  ", min, max);
        scanf("%d", &tebakan);

        if (tebakan < min || tebakan > max) {
            printf("Tebakan di luar rentang! Coba lagi.\n");
            continue;
        }

        if (tebakan == bomb) {
            printf("\n");
            printf("+-----------------------------------------------+\n");
            printf("|                                               |\n");
            printf("|           BOMB!!!! YAHKAMU KALAH              |\n");
            printf("|          ANGKA BOMB NYA ADALAH %d.            |\n", tebakan);
            printf("|                                               |\n");
            printf("+-----------------------------------------------+\n\n\n");
            selesai = 1;
        } else {
            printf("Selamat, kamu aman!\n\n");
        
            if (tebakan < bomb) {
                min = tebakan + 1;
            } else {
                max = tebakan - 1;
            }
            
            if (min == max) {
                printf("Selamat! Kamu berhasil menghindari bomb!\n");
                selesai = 1;
            }
        }
    }
    printf("Angka BOMB tadi adalah: %d\n", bomb);
    return 0;
}
